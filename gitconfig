[user]
    email = yesudeep@google.com
    name = Yesudeep Mangalapilly

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto

[alias]
    authors = log --all --format='%aN <%aE>'
    b = branch
    ba = branch -a
    c = commit -s
    changelog = log --pretty='format:* %s'
    co = checkout
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    s = status -s
    unstage = reset HEAD
    conflicts = !git ls-files -u | cut -f 2 | sort -u

[diff]
    guitool = meld

[merge]
    tool = mymeld
    conflictstyle = diff3

[mergetool "mymeld"]
    cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED

[tig]
#   show-date = relative
#   author-width = 8
   show-rev-graph = yes
[push]
	default = simple
